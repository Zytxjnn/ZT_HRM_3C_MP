.search{
  z-index: 999;
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 20rpx 0 20rpx;
  background-color: #fff;
  border-bottom:1px solid #ccc;
  z-index: 100;
}

.search-content{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search-input-wrap{
  display: flex;
  height: 60rpx;
  flex:1;
  background-color: #f6f6f6;
  border-radius: 20rpx;
  overflow: hidden;
}

.search-input-wrap .iconfont{
  font-size: 40rpx;
  position: relative;
  top: 0rpx;
  padding:0 20rpx;
}

.search-input-wrap input{
  width: 100%;
  height: 100%;
}

.search-btn{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 10rpx;
  color:#fff;
  text-align: center;
  background-color: #409EFF;
  margin-left: 20rpx;
}

.search .bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.search .bottom .total{
  padding: 16rpx 0;
}

.search .bottom .total .count{
  font-weight: 800;
}

.employee-list{
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  height: 79vh;
  border: 20px;
}

.nodata{
  padding: 20rpx;
}


.employee{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  width: 95%;
  margin:0 auto;
  box-sizing: border-box;
  box-shadow: 0 2px 12px 0 rgb(0 0 0 / 10%);
  margin-bottom: 30rpx;
  border-radius: 20rpx;
}

.employee .image{
  width: 200rpx;
  height: 260rpx;
  border-radius: 10rpx;
  overflow: hidden;
}



