.employee .image image{
  width: 100%;
  height: 100%;
}

.employee .content{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
  flex:1;
  font-size: 28rpx;
}

.employee .archives-manager{
  width: 440rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.employee .content .name{
  display: flex;
  justify-content:space-between;

}

.employee .content .name text:first-child{
  font-size: 36rpx;
  font-weight: 800;
}

.employee .content .name text:last-child{
  font-size: 32rpx;
}

.employee .secondary-institutions-name{
  display: flex;
  justify-content: space-between;
}

.employee .secondary-institutions-name text:last-child{
  font-size: 30rpx;
  font-weight: 800;
}

.sift-wrapper{
  position: relative;
  background-color: #fff;
  height: 900rpx;
  border-radius: 40rpx 40rpx 0 0;
  padding: 20rpx;
}

.sift-wrapper .header{
  text-align: center;
}

.sift-wrapper .content{
  margin-top: 80rpx;
}


.sift-wrapper .options{
  width: 60%;
  position: absolute;
  left: 50%;
  bottom: 60rpx;
  transform: translate(-50%,0);
  display: flex;
  justify-content: space-around;
}

.popup-list-wrapper{
  background-color: #fff;
  height: 100vh;
  width: 70vw;
  padding-top: 40rpx;
}

.popup-list{
  height: 87vh;
  overflow-y: scroll;
  padding: 20rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.popup-list .popup-list-item{
  padding: 20rpx 0;
}

.sift-item-text{
  margin-left: 24rpx;
  width: 400rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap; 
  font-size: 32rpx;
}

.sift-item-text.hasValue{
  color:#3963bc;
}

.pls-class{
  color:#f00;
}

.sift-wrapper input{
  color:#3963bc;
}