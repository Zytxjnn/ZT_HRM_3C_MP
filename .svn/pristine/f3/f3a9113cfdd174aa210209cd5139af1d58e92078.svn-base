 @import './resouces/iconfont/iconfont.wxss';

 page{
   font-size: 32rpx;
 }

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.tabs-wrapper{
  position: sticky;
  top: 0;
  box-sizing: border-box;
  overflow-x: scroll;
  padding:0 40rpx 20rpx 40rpx;
  background-color: #fff;

}

.tabs{
  display: flex;
  justify-content: space-between;
  align-items:center;
}

.tabs .tab{
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  flex-shrink:0;
  margin-right: 30rpx;
  font-size: 30rpx;
}

.tabs .tab.active{
  font-weight: 800;
  color:#409EFF;
  border-bottom: 2px solid #409EFF;
  font-size: 34rpx;
} 

::-webkit-scrollbar {


  display:none;
  width:0;
  height:0;
  color:transparent;
}