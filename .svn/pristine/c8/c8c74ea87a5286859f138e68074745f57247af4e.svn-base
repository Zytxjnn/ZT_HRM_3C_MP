.search{
  padding:0 20rpx;
  
}

.search-content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
}

.search-input-wrap{
  display: flex;
  height: 100%;
  flex:1;
  background-color: #eee;
  overflow: hidden;
}

.search-input-wrap .iconfont{
  font-size: 40rpx;
  position: relative;
  top: 4rpx;
  padding:0 20rpx;
}

.search-input-wrap input{
  height: 100%;
}

.search-content .select-type{
  height: 100%;
  margin:0 10rpx;
  background-color: #eee;
  padding: 0 20rpx;
  font-weight: 800;
  font-size: 30rpx;
  line-height: 70rpx;
}

.search-btn{
  width: 130rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  color:#fff;
  text-align: center;
  background-color: #409EFF;
}

.history{
  padding: 20rpx;
}

.history .header{
  display: flex;
  align-items: flex-end;
  justify-content:space-between;
}

.history .header .empty{
  font-size: 50rpx;
}

.history .title{
  font-size: 40rpx;
}

.history .list{
  display: flex;
  flex-wrap: wrap; 
  margin-top: 20rpx;
}

.history .list .item{
  background-color: #ddd;
  border-radius: 20rpx;
  padding:10rpx 30rpx;
  margin-right: 40rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}



.result .list{
  margin-top: 10rpx;
}

.result .list .item{
  padding: 20rpx;
  font-size: 30rpx;
  border-bottom:1px solid #ccc;
}

.result  .icon-sousuo{
  font-size: 40rpx;
  position: relative;
  top: 4rpx;
  padding-right:20rpx;
}
