.header .left .name{
  font-size: 60rpx;
  font-weight: 800;
  letter-spacing: 6rpx;
}

.header .left .descrition{
  margin-top: 20rpx;
  font-size: 34rpx;
  letter-spacing: 2rpx;
}

.info-list{
  padding:0 40rpx;
}

.info-item{
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}

.info-item text:first-child{
  margin-bottom: 10rpx;
  font-size: 34rpx;
}

.tabs{
  position: sticky;
  top:0;
  background: #fff;
}

.nodata{
  text-align: center;
}

.work-info .title{
  font-size: 40rpx;
  font-weight: 800;
  padding-left: 40rpx;
  border-left:12rpx solid #409EFF;
}

.work-info .list{
  padding:0 40rpx;
  margin-bottom: 40rpx;
}