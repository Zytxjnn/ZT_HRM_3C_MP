page{
  background-color: #fff;
}

.header{
  display: flex;
  justify-content: space-between;
  padding: 40rpx;
  height: 260rpx;
}



.header .right {
  width: 200rpx;
  height: 260rpx;
}

.header .right image{
  width: 100%;
  height: 100%;
}

.right .image{
  width: 200rpx;
  height: 260rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.right .noimage{
  position:relative;
  background-color: #f5f7fa;
}

