.header .left{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex:1;
  height: 100%;
}

.header .left .unit{
  font-size: 30rpx;  
}

.header .left .name{
  font-size: 60rpx;
  font-weight: 800;
}

.header .left .name text{
  font-size: 40rpx;
}


.header .left .descrition{
  margin-top: 20rpx;
  font-size: 34rpx;
  letter-spacing: 2rpx;
}

.info-list{
  padding:0 40rpx;
}

.info-item{
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  border-bottom: 1px solid #ccc;
}

.info-item text:first-child{
  margin-bottom: 10rpx;
  font-size: 34rpx;
}

.tabs{
  position: sticky;
  top:0;
  background: #fff;
}

.nodata{
  text-align: center;
}

.work-info .title{
  font-size: 40rpx;
  font-weight: 800;
  padding-left: 40rpx;
  border-left:12rpx solid #409EFF;
}

.work-info .list{
  padding:0 40rpx;
  margin-bottom: 40rpx;
}

.file-list{
  padding: 0 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.file-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 47%;
  margin-bottom: 40rpx;
}

.file-item image{
  width: 200rpx;
  height: 230rpx;
}

.file-name{
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}