  .employee .content{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-left: 20rpx;
    flex:1;
    font-size: 28rpx;
  }
  
  .employee .archives-manager{
    width: 440rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .employee .content view{
    margin-bottom: 10rpx;
  }
  
  .employee .content .name{
    display: flex;
    justify-content:space-between;
  
  }
  
  .employee .content .name text:first-child{
    font-size: 36rpx;
    font-weight: 800;
  }
  
  .employee .content .name text:last-child{
    font-size: 32rpx;
  }
  
  .employee .secondary-institutions-name{
    display: flex;
    justify-content: space-between;
  }
  
  .employee .secondary-institutions-name text:last-child{
    font-size: 30rpx;
    font-weight: 800;
  }