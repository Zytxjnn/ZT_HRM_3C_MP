.employee{
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    box-sizing: border-box;
    margin-bottom: 30rpx;
  }
  

  
  .employee .image{
    width: 200rpx;
    height: 260rpx;
    border-radius: 10rpx;
    overflow: hidden;
  }

  .employee .image image{
    width: 100%;
    height: 100%;
  }
  
  
